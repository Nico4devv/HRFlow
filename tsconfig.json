
{
	"compilerOptions": {
		"target": "ES2020",
		"module": "es2020",
		"lib": ["DOM", "ES2020"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"frontend/**/*",
		"frontend/src/**/*",
		"backend/**/*",
		"*.ts",
		"*.js"
	],
	"exclude": ["node_modules", "dist"]
}
